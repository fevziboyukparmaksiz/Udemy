Console.WriteLine("Dizi kaç elemanlı olacak ? ");
int eleman = Convert.ToInt32(Console.ReadLine());
int[] dizi = new int[eleman];

for (int i = 0; i < dizi.Length; i++)
{
    Console.WriteLine("{0}. index e denk gelen değeri yazınız. ", i);
    dizi[i] = Convert.ToInt32(Console.ReadLine());
}

Console.WriteLine("Dizi belirlendi .");

Console.WriteLine("Dizi içerisinde değerler ve toplam, ortalama değeri aşağıdaki gibidir .");

int toplam = 0, ortalama = 0;

foreach (int item in dizi)
{
    Console.WriteLine(item);
    toplam = toplam + item;
}

Console.WriteLine("+++++++++++++++++++++++++++++++++++++++");

Console.WriteLine("Dizi içerisindeki eleman sayısısı :{0}", dizi.Length);

Console.WriteLine($"Dizinin toplamı : {toplam}");

ortalama = toplam/dizi.Length;

Console.WriteLine($"Ortalama = {ortalama}");
