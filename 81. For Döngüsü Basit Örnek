            //1 ile 100 arasında çift sayıların toplamı

            int toplam = 0;

            for (int i = 1; i < 100; i++)
            {
                if (i %2 == 0)
                {
                    //toplam =toplam+i;
                    toplam += i;

                }
            }

            Console.WriteLine("1 ile 100 arasındak çift sayıların toplamı : "+ toplam);
